$(function(){
    // 表示ボタンクリックでメッセージを表示
    $('#show').on('click', function() {
    	alert('こんにちは!');
        /*
         * 1秒かけてメッセージを表示し、
         * その後2秒間何もせず、
         * その後2秒かけてメッセージを非表示にする
         */
        $('.alert').fadeIn(1000).delay(2000).fadeOut(2000);
    });
    // メッセージ内の×ボタンクリックでメッセージを非表示にする
    $('.alert .close').on('click', function() {
        $(this).parents('.alert').hide();
    });
});